<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
version="2.0">
	<persistence-unit name="sgiPU">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<jta-data-source>java:jboss/datasources/sgi-ds</jta-data-source>
	
	<class>br.com.iejb.sgi.domain.Membro</class>
	<class>br.com.iejb.sgi.domain.Usuario</class>
	<class>br.com.iejb.sgi.domain.UF</class>
	<class>br.com.iejb.sgi.domain.Cidade</class>
	<class>br.com.iejb.sgi.domain.Filho</class>
	
	<properties>
         <property name="hibernate.hbm2ddl.auto" value="update" />
         <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
         <property name="hibernate.show_sql" value="false"/>
         <property name="hibernate.format_sql" value="false"/>
         <property name="hibernate.use_sql_comments" value="false"/>
	</properties>
	</persistence-unit>
</persistence>
